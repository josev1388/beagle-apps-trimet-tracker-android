<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/mainLinearLayout" android:layout_width="wrap_content" android:layout_height="match_parent">
    <TextView android:textSize="10pt" android:text="@string/homepageTitle" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/homepageTitle" android:paddingLeft="10dp" android:paddingRight="10dp" android:paddingTop="5dp"></TextView>
    <View android:background="@drawable/divider"
    android:layout_width="fill_parent"
    android:layout_below="@id/homepageTitle" 
    android:id="@+id/divider" android:layout_height="2px" android:layout_marginBottom="5px" android:layout_marginTop="5px"/>
    <ListView android:layout_weight="1" android:id="@+id/favoriteStopsListView" android:layout_width="wrap_content" android:layout_gravity="fill" android:layout_height="match_parent"></ListView>
    <LinearLayout android:layout_width="match_parent" android:layout_gravity="bottom" android:layout_weight="0" android:layout_height="wrap_content" android:id="@+id/bottomBar">
        <EditText android:id="@+id/stopIDTextBox" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="fill_horizontal" android:layout_weight="2" android:hint="@string/homepageTextTip" android:inputType="number"></EditText>
        <Button android:text="@string/homepageGo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/goButton" android:layout_weight="2"></Button>
        <Button android:text="@string/homepageFindStop" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/findStopButton" android:layout_weight="0"></Button>
    </LinearLayout>
</LinearLayout>
