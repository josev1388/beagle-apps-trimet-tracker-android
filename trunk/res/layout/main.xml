<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/mainLinearLayout" android:layout_width="wrap_content"
	android:layout_height="match_parent" android:orientation="vertical">
	<LinearLayout android:layout_height="wrap_content"
		android:id="@+id/topBar" android:layout_width="match_parent"
		android:baselineAligned="false" android:layout_gravity="center"
		android:orientation="vertical" android:background="@drawable/top_bar">
		<View android:background="@drawable/divider_grey"
			android:layout_width="fill_parent" android:layout_height="1px"
			android:id="@+id/divider_"></View>
		<View android:background="@drawable/divider_white"
			android:layout_width="fill_parent" android:layout_height="1px"
			android:id="@+id/divider_"></View>
		<TextView android:textSize="22sp" android:paddingLeft="10dp"
			android:text="@string/homepageTitle" android:id="@+id/homepageTitle"
			android:paddingRight="10dp" android:layout_height="wrap_content"
			android:paddingTop="5dp" android:layout_width="wrap_content"
			android:layout_gravity="center" android:paddingBottom="5dp"></TextView>
		<View android:background="@drawable/divider_black"
			android:layout_width="fill_parent" android:layout_height="1px"
			android:id="@+id/divider_"></View>
	</LinearLayout>

	<ListView android:layout_weight="1" android:id="@+id/favoriteStopsListView"
		android:layout_width="wrap_content" android:layout_height="match_parent"
		android:layout_gravity="top"></ListView>
	<ScrollView android:layout_width="match_parent" android:id="@+id/HP_emptyView" android:layout_height="wrap_content" android:layout_weight="1">
		<RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/emptyViewRelative" android:gravity="top">
			<TextView android:layout_marginTop="14dp" android:layout_alignParentTop="true" android:paddingTop="5dp" android:id="@+id/welcome_title" android:paddingLeft="10dp" android:textColor="@color/Green" android:layout_height="wrap_content" android:layout_width="match_parent" android:textStyle="bold" android:gravity="center_horizontal" android:maxLines="1" android:layout_alignParentLeft="true" android:paddingRight="10dp" android:textSize="22sp" android:text="@string/welcomeTitle"></TextView>
			<View android:layout_marginTop="10dp" android:layout_height="1px" android:id="@+id/divider2_" android:layout_below="@+id/welcome_title" android:layout_width="wrap_content" android:background="@drawable/divider_grey" android:layout_alignParentLeft="true"></View>
			<TextView android:layout_marginTop="20dp" android:paddingTop="5dp" android:id="@+id/welcome_message" android:paddingLeft="18dp" android:layout_height="wrap_content" android:layout_below="@+id/welcome_title" android:layout_width="match_parent" android:layout_alignParentLeft="true" android:paddingRight="10dp" android:textSize="20sp" android:text="@string/welcomeMessage"></TextView>
		</RelativeLayout>
	</ScrollView>
	<View android:layout_width="fill_parent" android:layout_height="1px"
		android:background="@drawable/divider_grey" android:id="@+id/divider2"></View>
	<LinearLayout android:layout_width="match_parent"
		android:id="@+id/bottomBar" android:layout_gravity="bottom"
		android:background="@drawable/top_bar" android:layout_height="52dp">
		<EditText android:layout_width="wrap_content" android:hint="@string/homepageTextTip"
			android:layout_gravity="bottom" android:cursorVisible="true"
			android:inputType="number" android:layout_height="wrap_content"
			android:id="@+id/stopIDTextBox" android:layout_weight="2"
			android:layout_marginRight="5dp" android:layout_marginLeft="5dp">
			<requestFocus></requestFocus>
		</EditText>

		<ImageView style="@style/TitleBarSeparatorDark" />
		<ImageView style="@style/TitleBarSeparatorLight" />
		<Button android:layout_weight="2" android:layout_width="wrap_content"
			android:id="@+id/goButton" android:text="@string/homepageGo" style="@style/GradiantButton"
			android:layout_gravity="bottom" android:layout_height="match_parent"></Button>

	</LinearLayout>
</LinearLayout>